<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/primary_top_rounded"
    android:paddingVertical="32dp">

    <ProgressBar
        android:id="@+id/progress_verification"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/determinate_progress_layer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/progress_verification"
        app:layout_constraintEnd_toEndOf="@id/progress_verification"
        app:layout_constraintStart_toStartOf="@id/progress_verification"
        app:layout_constraintTop_toTopOf="@id/progress_verification" />


</androidx.constraintlayout.widget.ConstraintLayout>